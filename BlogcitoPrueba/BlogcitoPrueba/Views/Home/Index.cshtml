        .insta-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin: 40px auto;
    max-width: 1300px;
}

       .insta-post {
    position: relative;
    width: 250px;
    height: 250px;
    overflow: hidden;
    border-radius: 12px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

        .insta-post img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.3s ease;
        }

      .insta-caption {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #dad7c5;
    color: #124f56;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    font-size: 16px;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}


        .insta-post:hover .insta-caption {
            opacity: 1;
        }

        .insta-post:hover img {
            transform: scale(1.05);
        }

        .insta-icon-corner {
    position: absolute;
    bottom: 8px;
    right: 10px;
    color: #dad7c5;
    font-size: 18px;
    opacity: 0.8;
}

    </style>
